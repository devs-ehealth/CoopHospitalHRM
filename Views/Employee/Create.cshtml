                        <div class="row mb-5">
                            <div class="col-12">
                                <h5 class="text-hospital-red mb-4 border-bottom pb-2">
                                    <i class="fas fa-user me-2"></i>Personal Information
                                </h5>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmployeeCode" class="form-label fw-semibold">
                                    <i class="fas fa-id-card me-1"></i>Employee Code
                                </label>
                                <input asp-for="EmployeeCode" class="form-control" placeholder="Enter employee code" />
                                <span asp-validation-for="EmployeeCode" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-1"></i>Full Name
                                </label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="InitialName" class="form-label fw-semibold">
                                    <i class="fas fa-signature me-1"></i>Name with Initials
                                </label>
                                <input asp-for="InitialName" class="form-control" placeholder="Enter name with initials" />
                                <span asp-validation-for="InitialName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="NIC" class="form-label fw-semibold">
                                    <i class="fas fa-address-card me-1"></i>NIC Number
                                </label>
                                <input asp-for="NIC" class="form-control" placeholder="Enter NIC number" />
                                <span asp-validation-for="NIC" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DOB" class="form-label fw-semibold">
                                    <i class="fas fa-birthday-cake me-1"></i>Date of Birth
                                </label>
                                <input asp-for="DOB" type="date" class="form-control" />
                                <span asp-validation-for="DOB" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label fw-semibold">
                                    <i class="fas fa-venus-mars me-1"></i>Gender
                                </label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="BloodGroup" class="form-label fw-semibold">
                                    <i class="fas fa-tint me-1"></i>Blood Group
                                </label>
                                <select asp-for="BloodGroup" class="form-select">
                                    <option value="">Select Blood Group</option>
                                    <option value="A+">A+</option>
                                    <option value="A-">A-</option>
                                    <option value="B+">B+</option>
                                    <option value="B-">B-</option>
                                    <option value="AB+">AB+</option>
                                    <option value="AB-">AB-</option>
                                    <option value="O+">O+</option>
                                    <option value="O-">O-</option>
                                </select>
                                <span asp-validation-for="BloodGroup" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Contact Information Section -->
                        <div class="row mb-5">
                            <div class="col-12">
                                <h5 class="text-hospital-red mb-4 border-bottom pb-2">
                                    <i class="fas fa-address-book me-2"></i>Contact Information
                                </h5>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-1"></i>Email Address
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label fw-semibold">
                                    <i class="fas fa-phone me-1"></i>Phone Number
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label fw-semibold">
                                    <i class="fas fa-home me-1"></i>Address
                                </label>
                                <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter full address"></textarea>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Employment Details Section -->
                        <div class="row mb-5">
                            <div class="col-12">
                                <h5 class="text-hospital-red mb-4 border-bottom pb-2">
                                    <i class="fas fa-briefcase me-2"></i>Employment Details
                                </h5>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="JoinDate" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-plus me-1"></i>Join Date
                                </label>
                                <input asp-for="JoinDate" type="date" class="form-control" />
                                <span asp-validation-for="JoinDate" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DepartmentID" class="form-label fw-semibold">
                                    <i class="fas fa-building me-1"></i>Department
                                </label>
                                <select asp-for="DepartmentID" class="form-select" asp-items="ViewBag.DepartmentID">
                                    <option value="">Select Department</option>
                                </select>
                                <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DesignationID" class="form-label fw-semibold">
                                    <i class="fas fa-user-tie me-1"></i>Designation
                                </label>
                                <select asp-for="DesignationID" class="form-select" asp-items="ViewBag.DesignationID">
                                    <option value="">Select Designation</option>
                                </select>
                                <span asp-validation-for="DesignationID" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="GradeID" class="form-label fw-semibold">
                                    <i class="fas fa-layer-group me-1"></i>Grade
                                </label>
                                <select asp-for="GradeID" class="form-select" asp-items="ViewBag.GradeID">
                                    <option value="">Select Grade</option>
                                </select>
                                <span asp-validation-for="GradeID" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="EmployeeCategoryID" class="form-label fw-semibold">
                                    <i class="fas fa-users me-1"></i>Employee Category
                                </label>
                                <select asp-for="EmployeeCategoryID" class="form-select" asp-items="ViewBag.EmployeeCategoryID">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="EmployeeCategoryID" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="WorkScheduleID" class="form-label fw-semibold">
                                    <i class="fas fa-clock me-1"></i>Work Schedule
                                </label>
                                <select asp-for="WorkScheduleID" class="form-select" asp-items="ViewBag.WorkScheduleID">
                                    <option value="">Select Work Schedule</option>
                                </select>
                                <span asp-validation-for="WorkScheduleID" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Medical Professional Details Section -->
                        <div class="row mb-5">
                            <div class="col-12">
                                <h5 class="text-hospital-red mb-4 border-bottom pb-2">
                                    <i class="fas fa-stethoscope me-2"></i>Medical Professional Details
                                </h5>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="MedicalLicenseNo" class="form-label fw-semibold">
                                    <i class="fas fa-file-medical me-1"></i>Medical License No
                                </label>
                                <input asp-for="MedicalLicenseNo" class="form-control" placeholder="Enter medical license number" />
                                <span asp-validation-for="MedicalLicenseNo" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Specialization" class="form-label fw-semibold">
                                    <i class="fas fa-star-of-life me-1"></i>Specialization
                                </label>
                                <input asp-for="Specialization" class="form-control" placeholder="Enter specialization" />
                                <span asp-validation-for="Specialization" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="YearsOfExperience" class="form-label fw-semibold">
                                    <i class="fas fa-chart-line me-1"></i>Years of Experience
                                </label>
                                <input asp-for="YearsOfExperience" type="number" class="form-control" placeholder="Enter years of experience" />
                                <span asp-validation-for="YearsOfExperience" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Emergency Contact Section -->
                        <div class="row mb-5">
                            <div class="col-12">
                                <h5 class="text-hospital-red mb-4 border-bottom pb-2">
                                    <i class="fas fa-exclamation-triangle me-2"></i>Emergency Contact
