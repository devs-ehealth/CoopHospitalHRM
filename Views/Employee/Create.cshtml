@model CoopHospitalHRM.Models.Entities.Employee

@{
    ViewData["Title"] = "Add New Employee";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- Header Card -->
            <div class="hospital-card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">
                            <i class="fas fa-user-plus me-2"></i>Add New Employee
                        </h3>
                        <a asp-action="Index" class="btn btn-hospital-outline">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>

            <!-- Main Form -->
            <div class="hospital-card">
                <div class="card-body">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-hospital"></div>
                        
