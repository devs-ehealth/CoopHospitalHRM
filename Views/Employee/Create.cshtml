                        <div class="row mb-5">
                            <div class="col-12">
                                <h5 class="text-hospital-red mb-4 border-bottom pb-2">
                                    <i class="fas fa-university me-2"></i>Bank Details
                                </h5>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="BankAccountNumber" class="form-label fw-semibold">
                                    <i class="fas fa-credit-card me-1"></i>Bank Account Number
                                </label>
                                <input asp-for="BankAccountNumber" class="form-control" placeholder="Enter bank account number" />
                                <span asp-validation-for="BankAccountNumber" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="BankName" class="form-label fw-semibold">
                                    <i class="fas fa-landmark me-1"></i>Bank Name
                                </label>
                                <input asp-for="BankName" class="form-control" placeholder="Enter bank name" />
                                <span asp-validation-for="BankName" class="text-danger small"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="BranchName" class="form-label fw-semibold">
                                    <i class="fas fa-code-branch me-1"></i>Branch Name
                                </label>
                                <input asp-for="BranchName" class="form-control" placeholder="Enter branch name" />
                                <span asp-validation-for="BranchName" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- System Fields (Hidden) -->
                        <div class="row d-none">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CreatedAt" class="form-label fw-semibold">Created At</label>
                                <input asp-for="CreatedAt" class="form-control" />
                                <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdatedAt" class="form-label fw-semibold">Updated At</label>
                                <input asp-for="UpdatedAt" class="form-control" />
                                <span asp-validation-for="UpdatedAt" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <a asp-action="Index" class="btn btn-hospital-outline">
                                        <i class="fas fa-arrow-left me-2"></i>Cancel
                                    </a>
                                    <button type="submit" class="btn btn-hospital btn-lg">
                                        <i class="fas fa-user-plus me-2"></i>Create Employee
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-format phone numbers
            const phoneInputs = document.querySelectorAll('input[asp-for="Phone"], input[asp-for="EmergencyPhone"]');
            phoneInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length > 0) {
                        value = value.match(/.{1,10}/)[0];
                        if (value.length > 3 && value.length <= 6) {
                            value = value.replace(/(\d{3})(\d+)/, '$1-$2');
                        } else if (value.length > 6) {
                            value = value.replace(/(\d{3})(\d{3})(\d+)/, '$1-$2-$3');
                        }
                    }
                    e.target.value = value;
                });
            });

            // Auto-calculate age from DOB
            const dobInput = document.querySelector('input[asp-for="DOB"]');
            if (dobInput) {
                dobInput.addEventListener('change', function() {
                    const dob = new Date(this.value);
                    const today = new Date();
                    let age = today.getFullYear() - dob.getFullYear();
                    const monthDiff = today.getMonth() - dob.getMonth();
                    
                    if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < dob.getDate())) {
                        age--;
                    }
                    
                    // You can display the age somewhere if needed
                    console.log('Calculated age:', age);
                });
            }

            // Form validation enhancement
            const form = document.querySelector('form.needs-validation');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    </script>
}